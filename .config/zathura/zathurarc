# Disable Zathura's sandbox -- Allows opening of hyperlinks
set sandbox none

# Try to open the source file of the pdf
map <C-e> exec 'pdfedit "$FILE"'

# Open a terminal instance in the directory of the file
# map <C-s> exec 'st -d "$FILE"'
map ,t exec 'pdfdirterm "$FILE"'

# Open a dragon-drop on the file
map <M-d> exec 'dragon-drop "$FILE"'

# Darken foreground color on inverted color mode
set recolor-darkcolor "#bcbcbc"
